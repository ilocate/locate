<p id="notice"><%= notice %></p>

<h1>Tracks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Label</th>
      <th>Note</th>
      <th>Is manual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.user_id %></td>
        <td><%= track.start_at %></td>
        <td><%= track.end_at %></td>
        <td><%= track.label_id %></td>
        <td><%= track.note %></td>
        <td><%= track.is_manual %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

